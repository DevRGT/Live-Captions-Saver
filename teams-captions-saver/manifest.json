{
  "manifest_version": 3,
  "name": "MS Teams Live Captions Saver. [Dev]",
  "icons": {
    "16": "icon_dev.png",
    "48": "icon_dev.png",
    "128": "icon_dev.png"
  },
  
  "version": "3.3.dev",
  "description": "This extension allows you to capture and save MS Teams live captions.",
  "homepage_url": "",  
  "permissions": [
    "downloads",
    "activeTab",
    "storage",
    "audioCapture",
    "fileSystemDirectory"
  ],
  "host_permissions": [
    "https://teams.microsoft.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_icon": "icon_dev.png",
    "default_popup": "popup.html",
    "default_title": "Visit the support page for more information"
  },
  "content_scripts": [
    {
      "matches": ["https://teams.microsoft.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
